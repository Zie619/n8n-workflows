# N8N Workflows Documentation - Environment Configuration
# Copy this file to .env and modify as needed

# Application Settings
ENVIRONMENT=development
HOST=127.0.0.1
PORT=8000
DEBUG=true

# Database Settings
DATABASE_PATH=database/workflows.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=3600  # seconds

# Performance Settings
UVICORN_WORKERS=1
UVICORN_RELOAD=true
UVICORN_ACCESS_LOG=true

# Security Settings (for production)
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
# SSL_ENABLED=false
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
HEALTH_CHECK_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Docker Configuration
COMPOSE_PROJECT_NAME=n8n-workflows
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=default
K8S_REPLICAS=2
K8S_CPU_REQUEST=250m
K8S_CPU_LIMIT=500m
K8S_MEMORY_REQUEST=256Mi
K8S_MEMORY_LIMIT=512Mi

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=""  # Optional S3 backup
BACKUP_S3_REGION=""
BACKUP_S3_ACCESS_KEY=""
BACKUP_S3_SECRET_KEY=""